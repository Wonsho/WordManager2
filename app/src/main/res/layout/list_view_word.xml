<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/list_theme"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/btn_sound"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toTopOf="@id/btn_add_explain"
                app:layout_constraintBottom_toBottomOf="@id/btn_add_explain"
                app:layout_constraintRight_toLeftOf="@id/btn_add_explain"
                android:src="@drawable/ic_baseline_volume_up_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_percentM"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/tva"
                app:layout_constraintBottom_toBottomOf="@id/tva"
                app:layout_constraintLeft_toRightOf="@id/tv_correctPercentage"
                android:text="%"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_correctPercentage"
                android:textColor="@color/black"
                app:layout_constraintLeft_toRightOf="@id/tva"
                app:layout_constraintTop_toTopOf="@id/tva"
                app:layout_constraintBottom_toBottomOf="@id/tva"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/tv_english"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/Typography"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/btn_sound"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="apple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#323235"
                android:textSize="18sp"
                android:text="사과"
                android:id="@+id/tv_korean"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="@id/tv_english"
                app:layout_constraintTop_toBottomOf="@id/tv_english"
                app:layout_constraintRight_toLeftOf="@id/tva"
                app:layout_goneMarginRight="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/btn_delete"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_baseline_cancel_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:id="@+id/tva"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/tv_korean"
                app:layout_constraintLeft_toLeftOf="@id/btn_sound"
                android:text="정답률 :  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:textSize="8dp"
                android:layout_marginTop="23dp"
                app:layout_constraintRight_toRightOf="@id/btn_add_explain"
                app:layout_constraintLeft_toLeftOf="@id/btn_add_explain"
                app:layout_constraintTop_toTopOf="@id/btn_add_explain"
                android:text="Memo"
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/btn_add_explain"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingLeft="5dp"
                app:layout_constraintTop_toTopOf="@id/btn_delete"
                app:layout_constraintRight_toLeftOf="@id/btn_delete"
                app:layout_constraintBottom_toBottomOf="@id/btn_delete"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_baseline_edit_note_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>