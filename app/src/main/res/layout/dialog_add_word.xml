<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv1"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="단어 추가"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvLine"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/et_english"
            app:layout_constraintTop_toTopOf="@id/et_english"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="영어 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_english"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_in_dialog"
            android:gravity="center"
            android:hint="이곳을 눌러 영어를 적어주세요"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv"
            app:layout_constraintTop_toBottomOf="@id/tvLine" />
        <TextView
            android:id="@+id/tv11"
            android:layout_marginTop="10sp"
            app:layout_constraintTop_toBottomOf="@id/et_english"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="단어 뜻 추가"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv11"
            app:layout_constraintTop_toTopOf="@id/tv11"
            app:layout_constraintBottom_toBottomOf="@id/tv11"
            android:background="@color/black"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv11"
            app:layout_constraintTop_toTopOf="@id/tv11"
            app:layout_constraintBottom_toBottomOf="@id/tv11"
            android:background="@color/black"
            android:layout_width="0dp"
            android:layout_height="1dp"/>


        <TextView
            android:textStyle="bold"
            android:id="@+id/tva"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/et_english"
            app:layout_constraintTop_toTopOf="@id/et_english"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="영어 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_ILBAN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_in_dialog"
            android:gravity="center"
            android:hint="이곳을 눌러 영어를 적어주세요"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv"
            app:layout_constraintTop_toBottomOf="@id/tv11" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tvb"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/et_ILBAN"
            app:layout_constraintTop_toTopOf="@id/et_ILBAN"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="일반 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_MYUNGSA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_in_dialog"
            android:gravity="center"
            android:hint="이곳을 눌러 영어를 적어주세요"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv"
            app:layout_constraintTop_toBottomOf="@id/et_ILBAN" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tvc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/et_MYUNGSA"
            app:layout_constraintTop_toTopOf="@id/et_MYUNGSA"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="명사 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_DONGSA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_in_dialog"
            android:gravity="center"
            android:hint="이곳을 눌러 영어를 적어주세요"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv"
            app:layout_constraintTop_toBottomOf="@id/et_MYUNGSA" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tvd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/et_DONGSA"
            app:layout_constraintTop_toTopOf="@id/et_DONGSA"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="동사 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_HYUNGYONGSA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_in_dialog"
            android:gravity="center"
            android:hint="이곳을 눌러 영어를 적어주세요"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv"
            app:layout_constraintTop_toBottomOf="@id/et_DONGSA" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tve"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/et_HYUNGYONGSA"
            app:layout_constraintTop_toTopOf="@id/et_HYUNGYONGSA"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="형용사 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_BUSA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_in_dialog"
            android:gravity="center"
            android:hint="이곳을 눌러 영어를 적어주세요"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv"
            app:layout_constraintTop_toBottomOf="@id/tvLine" />
        <TextView
            android:textStyle="bold"
            android:id="@+id/tvt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/et_HYUNGYONGSA"
            app:layout_constraintTop_toTopOf="@id/et_HYUNGYONGSA"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="형용사 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>