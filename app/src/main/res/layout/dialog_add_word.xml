<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv1"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="단어 추가"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvLine"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <EditText
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/et_english"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_in_dialog"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvLine"
            android:hint="이곳을 눌러 영어를 적어주세요"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_korean"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_in_dialog"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/et_english"
            android:hint="단어의 뜻을 적어주세요"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvLine2"
            android:background="@color/black"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_a"
            app:layout_constraintTop_toTopOf="@id/tv_a"
            app:layout_constraintLeft_toRightOf="@id/tv_a"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <TextView
            android:background="@color/black"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_a"
            app:layout_constraintTop_toTopOf="@id/tv_a"
            app:layout_constraintRight_toLeftOf="@id/tv_a"
            android:layout_width="0dp"
            android:layout_height="1dp"/>


        <TextView
            android:background="@color/black"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sc"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tv_a"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_info"
            android:textColor="@color/Typography"
            android:text="타자 도움 버튼"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/et_korean"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tv_info"
            android:textSize="12dp"
            android:text="만약 단어의 뜻이 2개 이상이라면 쉼표를 찍어 구분해주세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <HorizontalScrollView
            android:id="@+id/sc"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_margin="5dp"
                    android:id="@+id/btn_marker"
                    android:textColor="@color/black"
                    android:text="(쉼표 찍기)"
                    android:backgroundTint="@color/dialogBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_margin="5dp"
                    android:id="@+id/btn_myung"
                    android:textColor="@color/black"
                    android:text="명)"
                    android:backgroundTint="@color/dialogBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_margin="5dp"
                    android:id="@+id/btn_dong"
                    android:textColor="@color/black"
                    android:text="동)"
                    android:backgroundTint="@color/dialogBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_margin="5dp"
                    android:id="@+id/btn_jodong"
                    android:textColor="@color/black"
                    android:text="조동사)"
                    android:backgroundTint="@color/dialogBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_margin="5dp"
                    android:id="@+id/btn_hyung"
                    android:textColor="@color/black"
                    android:text="형)"
                    android:backgroundTint="@color/dialogBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_busa"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:text="부)"
                    android:backgroundTint="@color/dialogBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>